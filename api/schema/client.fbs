include "common.fbs";

namespace DeathioApi;

enum ActionType: ubyte {
    Primary = 0,
    CraftItem,
    EquipItem,
    UnequipItem,
    DropItem,
    PlaceItem,
    ConsumeItem
}

table Action {
	item:ubyte;
	actionType:ActionType = Primary;
}

table Input {
    tick:ulong;
    movement:Vec2f;
    rotation:float;
    action:Action;
}

root_type Input;